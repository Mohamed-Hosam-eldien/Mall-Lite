<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:minWidth="320dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_text5"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <com.ornach.nobobutton.NoboButton
                            android:id="@+id/btnAddAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="32sp"
                            app:nb_text="@string/address"
                            app:nb_textColor="@color/white"
                            app:nb_backgroundColor="@color/darkGreen"
                            app:nb_radius="8dp"
                            app:nb_textSize="12sp"
                            app:nb_drawableResource="@drawable/ic_baseline_add_24"
                            android:layout_marginRight="5dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            tools:ignore="RelativeOverlap" />

                        <Spinner
                            android:id="@+id/spinnerHeaderAddress"
                            style="@style/spinner_style"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:dropDownWidth="match_parent"
                            android:gravity="center"
                            android:layout_alignParentLeft="true"
                            android:visibility="gone"
                            android:popupBackground="#FFFFFF"
                            android:requiresFadingEdge="horizontal|vertical"
                            android:textAlignment="center" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="#000000" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/border_layout"
                        android:layoutDirection="rtl"
                        android:orientation="vertical"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0sp"
                        tools:ignore="RtlHardcoded">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:baselineAligned="false"
                                android:orientation="horizontal"
                                tools:ignore="UselessParent">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:gravity="right"
                                    android:orientation="vertical"
                                    android:paddingEnd="10dp"
                                    tools:ignore="RtlHardcoded,RtlSymmetry">

                                    <TextView
                                        android:id="@+id/txtNotFound"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="8dp"
                                        android:text="@string/not_address_in_your_menu"
                                        android:textSize="16sp"
                                        tools:ignore="TooDeepLayout" />

                                    <LinearLayout
                                        android:id="@+id/layoutAddress"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="right"
                                        android:orientation="vertical"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="right"
                                            android:orientation="horizontal"
                                            tools:ignore="TooDeepLayout">

                                            <TextView
                                                android:id="@+id/nameBuild"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="right"
                                                android:layout_marginRight="10dp"
                                                android:gravity="right"
                                                android:textSize="16sp"
                                                android:visibility="gone" />

                                            <TextView
                                                android:id="@+id/numBuild"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="right"
                                                android:layout_marginRight="10dp"
                                                android:gravity="right"
                                                android:textSize="16sp"
                                                tools:ignore="TooDeepLayout" />

                                        </LinearLayout>

                                        <TextView
                                            android:id="@+id/nameStreet"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:layout_marginRight="10dp"
                                            android:gravity="right"
                                            android:textSize="16sp" />

                                        <TextView
                                            android:id="@+id/zone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:layout_marginRight="10dp"
                                            android:gravity="right"
                                            android:textSize="16sp" />

                                        <TextView
                                            android:id="@+id/description"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:layout_marginRight="10dp"
                                            android:gravity="right"
                                            android:textSize="14sp"
                                            android:textStyle="bold"
                                            android:visibility="gone" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="right"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/numberFlat"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="right"
                                                android:layout_marginRight="4dp"
                                                android:gravity="right"
                                                android:textSize="16sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="right"
                                                android:layout_marginRight="16dp"
                                                android:gravity="right"
                                                android:text="@string/flate_number"
                                                android:textSize="16sp" />

                                            <TextView
                                                android:id="@+id/floor"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="right"
                                                android:layout_marginRight="4dp"
                                                android:gravity="right"
                                                android:textSize="16sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="right"
                                                android:layout_marginRight="15dp"
                                                android:gravity="right"
                                                android:text="@string/floor"
                                                android:textSize="16sp" />


                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTomorrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:text="@string/productTomorrow"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="RtlHardcoded" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="#000000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/background_checkout"
                        android:orientation="vertical"
                        android:paddingEnd="3dp"
                        android:paddingBottom="2dp"
                        tools:ignore="RtlSymmetry">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#fff"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="4dp"
                                    android:text="@string/total_pay"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    tools:ignore="RelativeOverlap" />

                                <TextView
                                    android:id="@+id/txt1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:gravity="right"
                                    android:text="@string/g.m"
                                    android:textColor="#000000"
                                    tools:ignore="RtlHardcoded" />

                                <TextView
                                    android:id="@+id/totalPaymentTomorrow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_toRightOf="@id/txt1"
                                    android:gravity="right"
                                    android:text="@string/_0_00"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    tools:ignore="RtlHardcoded" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="4dp"
                                    android:text="@string/delivery_price"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    tools:ignore="RelativeOverlap" />

                                <TextView
                                    android:id="@+id/txt2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:gravity="right"
                                    android:text="@string/g.m"
                                    android:textColor="#000000"
                                    android:visibility="gone"
                                    tools:ignore="RtlHardcoded" />

                                <TextView
                                    android:id="@+id/deleverySalaryTomorrow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_toRightOf="@id/txt2"
                                    android:gravity="right"
                                    android:text="@string/_0_00"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:visibility="gone"
                                    tools:ignore="RtlHardcoded" />

                                <TextView
                                    android:id="@+id/textNotFoundAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:visibility="gone"
                                    android:layout_marginLeft="8sp"
                                    android:layout_toRightOf="@id/progBarDeleveryTomorrow"
                                    android:text="لا يوجد عنوان!"
                                    android:textColor="@color/red"/>


                                <ProgressBar
                                    android:id="@+id/progBarDeleveryTomorrow"
                                    android:layout_width="18sp"
                                    android:layout_height="18sp"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="12dp" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginTop="5sp"
                                android:layout_marginBottom="5sp"
                                android:background="#3F51B5" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="4dp"
                                    android:text="@string/total"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    tools:ignore="RelativeOverlap" />

                                <TextView
                                    android:id="@+id/txt3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#3F51B5"
                                    android:gravity="right"
                                    android:paddingLeft="8dp"
                                    android:text="@string/g.m"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    tools:ignore="RtlHardcoded" />

                                <TextView
                                    android:id="@+id/totalAllTomorrow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/txt3"
                                    android:background="#3F51B5"
                                    android:gravity="right"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:text="@string/_0_00"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    tools:ignore="RtlHardcoded" />

                            </RelativeLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/layoutCachOnTomorrow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:text="@string/cash_on_delivery"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                tools:ignore="RelativeOverlap" />

                            <net.igenius.customcheckbox.CustomCheckBox
                                android:id="@+id/checkByCashTomorrow"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentStart="true"
                                android:clickable="false"
                                app:color_checked="#8FE32F"
                                app:duration="200"
                                app:stroke_width="1dp" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:text="@string/productAfterSomeDays"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="RtlHardcoded" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="#000000" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/background_checkout2"
                        android:orientation="vertical"
                        android:paddingEnd="3dp"
                        android:paddingBottom="2dp"
                        tools:ignore="RtlSymmetry">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#fff"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="4dp"
                                    android:text="@string/total_pay"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    tools:ignore="RelativeOverlap" />

                                <TextView
                                    android:id="@+id/txt4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="10dp"
                                    android:gravity="right"
                                    android:text="@string/g.m"
                                    android:textColor="#000000"
                                    tools:ignore="RtlHardcoded" />


                                <TextView
                                    android:id="@+id/totalPaymentDays"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_toRightOf="@id/txt4"
                                    android:gravity="right"
                                    android:text="@string/_0_00"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    tools:ignore="RtlHardcoded" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="4dp"
                                    android:text="@string/delivery_price"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    tools:ignore="RelativeOverlap" />

                                <TextView
                                    android:id="@+id/deleverySalaryDays"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_toRightOf="@id/txt5"
                                    android:gravity="right"
                                    android:text="@string/_0_00"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:visibility="gone"
                                    tools:ignore="RtlHardcoded" />

                                <TextView
                                    android:id="@+id/txt5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="10dp"
                                    android:gravity="right"
                                    android:text="@string/g.m"
                                    android:textColor="#000000"
                                    android:visibility="gone"
                                    tools:ignore="RtlHardcoded" />

                                <TextView
                                    android:id="@+id/textNotFoundAddress2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:visibility="gone"
                                    android:layout_marginLeft="8sp"
                                    android:layout_toRightOf="@id/progBarDeleveryDays"
                                    android:text="لا يوجد عنوان!"
                                    android:textColor="@color/red"/>

                                <ProgressBar
                                    android:id="@+id/progBarDeleveryDays"
                                    android:layout_width="18sp"
                                    android:layout_height="18sp"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="12dp" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginTop="5sp"
                                android:layout_marginBottom="5sp"
                                android:background="@color/colorPrimaryDark" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="4dp"
                                    android:text="@string/total"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    tools:ignore="RelativeOverlap" />

                                <TextView
                                    android:id="@+id/txt6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorPrimaryDark"
                                    android:gravity="right"
                                    android:paddingLeft="8dp"
                                    android:text="@string/g.m"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    tools:ignore="RtlHardcoded" />


                                <TextView
                                    android:id="@+id/totalAllPaymentAfter10Days"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/txt6"
                                    android:background="@color/colorPrimaryDark"
                                    android:gravity="right"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:text="@string/_0_00"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    tools:ignore="RtlHardcoded" />

                            </RelativeLayout>


                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/layoutCachVodafonDays"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="28sp"
                                android:text="@string/vodafonCash"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                tools:ignore="RelativeOverlap" />

                            <net.igenius.customcheckbox.CustomCheckBox
                                android:id="@+id/checkByCashVodafonDays"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentStart="true"
                                android:clickable="false"
                                app:color_checked="#8FE32F"
                                app:duration="200"
                                app:stroke_width="1dp" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtOrderComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:hint="@string/commentOrder"
                android:textColor="#3F51B5"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="#3F51B5"
                app:met_underlineColor="#3F51B5"
                tools:ignore="RtlHardcoded" />

            <com.ornach.nobobutton.NoboButton
                android:id="@+id/btnSend"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8sp"
                android:gravity="center"
                app:nb_backgroundColor="@color/yellow"
                app:nb_enabled="false"
                app:nb_focusColor="#FFEB3B"
