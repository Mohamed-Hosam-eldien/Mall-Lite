<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@drawable/white_dialog_background"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:minWidth="320dp"
    android:layout_marginRight="16sp"
    android:layout_marginLeft="16sp"
    android:padding="8dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/background_text"
        android:fontFamily="@font/font_project"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="@string/sign_in_user_data"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtUserPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_gravity="right"
        android:background="@drawable/background_text4"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="RtlHardcoded" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="RtlHardcoded">

        <EditText
            android:id="@+id/edit_nameUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_gravity="right"
            android:gravity="right"
            android:hint="@string/name"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            tools:ignore="Autofill,TextFields" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.ornach.nobobutton.NoboButton
        android:id="@+id/btnAddUser"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="35dp"
        app:nb_textSize="15sp"
        app:nb_textStyle="bold"
        android:layout_gravity="center"
        app:nb_radius="25dp"
        app:nb_textColor="@color/darkGreen"
        app:nb_focusColor="@color/focus_green"
        app:nb_backgroundColor="@color/low_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        app:nb_text="دخول" />


</LinearLayout>