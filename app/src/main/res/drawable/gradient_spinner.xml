<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="#FAF7F7">
                </solid>

                <corners android:radius="3dp" />

                <padding
                    android:bottom="10dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="10dp" />
                <stroke
                    android:width="2dp"
                    android:color="#1F94EF"/>
            </shape>
        </item>
        <item >
            <bitmap android:gravity="center_vertical|right"
                android:src="@drawable/drop_arrow"
                />
        </item>
    </layer-list></item>

</selector>